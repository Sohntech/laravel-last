{
    "openapi": "3.0.3",
    "info": {
      "title": "Laravel Last API",
      "description": "API documentation for Laravel Last project deployed on Render.",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "https://laravel-last.onrender.com/api/v1"
      }
    ],
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
    "security": [
      {
        "bearerAuth": []
      }
    ],
    "paths": {
      "/auth/login": {
        "post": {
          "summary": "User login",
          "description": "Logs in a user and returns a JWT token.",
          "responses": {
            "200": {
              "description": "Successful login"
            }
          },
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  },
                  "required": ["email", "password"]
                }
              }
            }
          }
        }
      },
      "/users/register": {
        "post": {
          "summary": "Register a new user",
          "description": "Registers a user with form-data for file upload.",
          "requestBody": {
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nom": { "type": "string" },
                    "prenom": { "type": "string" },
                    "email": { "type": "string" },
                    "password": { "type": "string" },
                    "adresse": { "type": "string" },
                    "telephone": { "type": "string" },
                    "statut": { "type": "string" },
                    "photo": {
                      "type": "string",
                      "format": "binary"
                    },
                    "fonction": { "type": "string" }
                  },
                  "required": ["nom", "prenom", "email", "password", "adresse", "telephone", "statut", "photo", "fonction"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "User registered successfully"
            }
          }
        }
      },
      "/users/update": {
        "get": {
          "summary": "Update a user",
          "description": "Gets details to update a user.",
          "responses": {
            "200": {
              "description": "User update data retrieved"
            }
          }
        }
      },
      "/users": {
        "get": {
          "summary": "Get all users",
          "description": "Retrieves a list of all users.",
          "responses": {
            "200": {
              "description": "List of users retrieved"
            }
          }
        }
      },
      "/users/filterByRole": {
        "get": {
          "summary": "Filter users by role",
          "description": "Filters users based on their role.",
          "responses": {
            "200": {
              "description": "Filtered users list"
            }
          }
        }
      }
    }
  }
  